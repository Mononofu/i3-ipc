# Maintainer: Jan-Erik Rediger <badboy at archlinux dot us>
pkgname=i3-ipc
pkgver=0.1.3
pkgrel=1
pkgdesc="inter-process communication with i3, the improved tiling window manager."
arch=(any)
url="http://github.com/badboy/i3-ipc"
license=('custom')
depends=('i3' 'ruby')
source=(
http://github.com/badboy/i3-ipc/blob/v${pkgver}/i3-ipc
http://github.com/badboy/i3-ipc/blob/v${pkgver}/man/i3-ipc.1
http://github.com/badboy/i3-ipc/blob/v${pkgver}/LICENSE
)
md5sums=('153a115e5e40adfe8b637a44dd38845b'
         'f27ae6bc08fde6786ae3ac86c304ee88'
         'd545750e698359ce2cea4e558ae92f99')

build() {
  cd "$srcdir/"

  install -Dm755 i3-ipc \
  ${pkgdir}/usr/bin/i3-ipc || return 1

  install -Dm644 i3-ipc.1 \
  ${pkgdir}/usr/share/man/man1/i3-ipc.1 || return 1

  install -Dm644 LICENSE \
  ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE || return 1

}

# vim:set ts=2 sw=2 et:
